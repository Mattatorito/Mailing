# Email Marketing Tool - Environment Variables Example
# Copy this file to .env and fill in your actual values

# Required: Resend API Configuration
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Required: Webhook Security
WEBHOOK_SECRET=your-secure-webhook-secret-key-here

# Database Configuration
SQLITE_DB_PATH=./data/mailing.sqlite3

# Application Environment
ENVIRONMENT=development
# Options: development, production, testing

# Server Configuration
HOST=0.0.0.0
PORT=8080
DEBUG=true

# Logging Configuration
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

LOG_FILE=logs/mailing.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# Email Sending Configuration
MAX_CONCURRENT_EMAILS=10
BATCH_SIZE=50
RETRY_ATTEMPTS=3
RETRY_DELAY=1

# Rate Limiting
DAILY_EMAIL_LIMIT=1000
RATE_LIMIT_PER_MINUTE=60

# Security Configuration
SECRET_KEY=your-secret-key-for-session-management
CSRF_SECRET=your-csrf-secret-key

# Template Configuration
TEMPLATE_DIR=samples
DEFAULT_TEMPLATE=default.html
TEMPLATE_CACHE_SIZE=100

# Monitoring (Optional)
GRAFANA_PASSWORD=admin
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Development Only
DEV_EMAIL_OVERRIDE=test@example.com
# When set, all emails will be sent to this address instead

# Production Only
SSL_CERT_PATH=/etc/ssl/certs/cert.pem
SSL_KEY_PATH=/etc/ssl/private/key.pem

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups

# Performance Tuning
WORKER_PROCESSES=4
WORKER_CONNECTIONS=1000
KEEPALIVE_TIMEOUT=65

# External Services (Optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
DATADOG_API_KEY=your-datadog-api-key

# Feature Flags
ENABLE_WEBHOOKS=true
ENABLE_STATISTICS=true
ENABLE_EMAIL_VALIDATION=true
ENABLE_TEMPLATE_CACHING=true